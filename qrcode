    <!-- QR Code Generator Script -->
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.4.4/build/qrcode.min.js"></script>
    <!-- HTML2Canvas for Downloading QR Code -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.3.2/html2canvas.min.js"></script>
    <script>
        // Scroll to QR Generator Section
        function scrollToGenerator() {
            document.getElementById('qrGenerator').scrollIntoView({ behavior: 'smooth' });
        }

        // QR Code Generator Logic
        document.getElementById('qrForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const qrContent = document.getElementById('qrContent').value;
            const qrSize = document.getElementById('qrSize').value;
            const qrColor = document.getElementById('qrColor').value;
            const qrBackground = document.getElementById('qrBackground').value;

            const qrCodeElement = document.getElementById('qrCode');
            qrCodeElement.innerHTML = '';

            QRCode.toCanvas(qrContent, {
                width: qrSize,
                color: {
                    dark: qrColor,
                    light: qrBackground
                }
            }, function (error, canvas) {
                if (error) console.error(error);
                qrCodeElement.appendChild(canvas);
                document.getElementById('downloadQR').style.display = 'block';
            });
        });

        // Download QR Code as PNG
        document.getElementById('downloadQR').addEventListener('click', function() {
            const qrCodeElement = document.getElementById('qrCode').querySelector('canvas');
            if (!qrCodeElement) {
                alert('Please generate a QR code first.');
                return;
            }
            html2canvas(qrCodeElement).then(canvas => {
                const link = document.createElement('a');
                link.href = canvas.toDataURL('image/png');
                link.download = 'qr-code.png';
                link.click();
            });
        });

        // Footer Contact Form Submission
        document.getElementById('footerContactForm').addEventListener('submit', function(event) {
            event.preventDefault();
            alert('Thank you for contacting us! We will get back to you soon.');
            document.getElementById('footerContactForm').reset();
        });
    </script>
